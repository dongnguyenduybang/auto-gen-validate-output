{
    "method": "POST",
    "path": "/Message/SendMessage",
    "headers": {
        "Content-Type": "application/json",
        "x-session-token": "{{token}}",
        "x-country-code": "VN"
    },
    "body": {
        "workspaceId": "0",
        "channelId": "{{channelId}}",
        "content": "test123123",
        "ref": "ref"
    },

    "beforeAll": [
        {
            "action": "mockUser"
        },
        {
            "action": "createChannel"
        }
    ],
    "afterAll": [
        {
            "action": "deleteMockedUsers",
            "body": {
                "prefix": "testfaker"
            },
            "header": { "token": "{{token}}" }
        },
        {
            "action": "deleteChannel",
            "header": { "token": "{{token}}", "userId": "{{userId}}"},
            "body": {
                "channelId": "{{channelId}}"
            }
        }
    ]
}